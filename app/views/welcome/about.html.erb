<div class="container">
<div class="row">
  <div class="col-md-8">
    <h1>Welcome#about</h1>
    <%= form_tag "show"%>
    <div class="form-group">
      <%= label_tag "enter REGEXP"%>
      <%= text_field_tag "regexp", nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "Enter Text to convert"%>
      <%= text_area_tag "body", nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-md-4">
    <%= @welcome %>
  </div>
</div>
</div>