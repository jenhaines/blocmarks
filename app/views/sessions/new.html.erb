<div class="container">
  <div class='row'>
  <div class='col-md-8'>
    <h1>Log In</h1>
    <%= form_tag sessions_path do %>
        <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: "password" %>
        </div>
        <div class="form-group">
        <%= submit_tag "Log In", class: 'btn btn-primary' %>
        </div>
    <% end %>
      </div>
  </div>
</div>