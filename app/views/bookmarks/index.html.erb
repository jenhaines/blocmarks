<div class="row">
  <div class="col-md-12">
    <h3>Topics</h3>
  </div>
  <div class="col-md-2">
    <div class="list-group">
        <b><%= link_to "All", bookmarks_path, class: "list-group-item #{'active' if Bookmark.all == @bookmarks}" %></b>
        <b><%= link_to "My Bookmarks", bookmarks_path(id: @user), class: "list-group-item #{'active' if @bookmarks == @user.bookmarks}" %></b>
      <%= render @topics %>
    </div>
  </div>
  <div class="col-md-10">
    <%= render @bookmarks %>
  </div>
</div>